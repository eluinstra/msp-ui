{
  "version": "0.2.0",
  "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch npm",
        "program": "${workspaceFolder}",
        "console": "integratedTerminal",
        "sourceMaps": false,
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run-script", "--inspect", "start"
        ]
      }
  ]
}